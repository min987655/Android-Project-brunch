<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--setPost-->
    <data>

<!--        <variable-->
<!--            name="postRespDto"-->
<!--            type="com.cos.brunch.dto.PostRespDto" />-->
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_cover_back_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_cover" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#664A4A31" />

        <RelativeLayout
            android:id="@+id/border_box"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:background="@drawable/border_box">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:src="@drawable/img_mark_1_b" />

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="41dp"
                android:fontFamily="@font/notosans_light"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="-5dp"
                android:text=""
                android:ellipsize="end"
                android:textColor="@color/colorWhite"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/tv_content2"
                android:layout_width="215dp"
                android:layout_height="38dp"
                android:layout_below="@+id/tv_title2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal"
                android:text=""
                android:ellipsize="end"
                android:textColor="@color/colorWhite40"
                android:textSize="12.5sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tv_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droidserif_regular"
                    android:text="by"
                    android:textColor="@color/colorWhite40"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tv_nickname_main2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_by"
                    android:text=""
                    android:textColor="@color/colorWhite40"
                    android:textSize="15sp" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp">

            <View
                android:id="@+id/img_pick_br"
                android:layout_width="115dp"
                android:layout_height="0.3dp"
                android:layout_centerHorizontal="true"
                android:background="@color/colorBorderLight" />

            <TextView
                android:id="@+id/tv_brunch_pick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_pick_br"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="나를 위한 브런치 Pick"
                android:textColor="@color/colorWhite"
                android:textSize="11sp" />

            <View
                android:layout_width="115dp"
                android:layout_height="0.3dp"
                android:layout_below="@+id/tv_brunch_pick"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:background="@color/colorBorderLight" />

        </RelativeLayout>
    </RelativeLayout>
</layout>