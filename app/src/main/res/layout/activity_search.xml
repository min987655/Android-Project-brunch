<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.search.SearchActivity">

    <include layout="@layout/toolbar_sub"/>

    <EditText
        android:id="@+id/et_search"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:hint="브런치 검색"
        android:textSize="27sp"
        android:background="@null"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_search"
        android:background="@color/colorLightGray"
        android:layout_alignParentBottom="true"/>

    <View
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@+id/et_search"
        android:background="@color/colorBorderDark" />

    <TextView
        android:id="@+id/apply_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/toolbar_marginRight"
        android:layout_below="@+id/bar"
        android:layout_marginTop="20dp"
        android:text="추천 작가 키워드"/>

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/toolbar_marginRight"
        android:layout_below="@+id/apply_keyword"
        android:textSize="18sp"
        android:text="책을 사랑하는 작가들을 만나보세요."/>

    <Button
        android:id="@+id/btn_apply_keyword"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_1"
        android:layout_alignLeft="@+id/tv_1"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_rounded_stroke_gray"
        android:text="출간작가"
        android:textColor="@color/colorCharcoal"
        android:textSize="13dp" />

    <Button
        android:id="@+id/btn_apply_keyword2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_1"
        android:layout_toRightOf="@+id/btn_apply_keyword"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_rounded_stroke_gray"
        android:text="방송작가"
        android:textColor="@color/colorCharcoal"
        android:textSize="13dp" />

    <Button
        android:id="@+id/btn_apply_keyword3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_1"
        android:layout_toRightOf="@+id/btn_apply_keyword2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_rounded_stroke_gray"
        android:text="프리랜서"
        android:textColor="@color/colorCharcoal"
        android:textSize="13dp" />
    
    <View
        android:id="@+id/bar2"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorGray20"
        android:layout_below="@+id/btn_apply_keyword3"/>

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/toolbar_marginRight"
        android:layout_below="@+id/bar2"
        android:layout_marginTop="20dp"
        android:text="최근 검색어"/>


</RelativeLayout>