<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLightGray"
    tools:context=".screen.login.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_login_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_logo_b" />

        <ImageView
            android:id="@+id/iv_login_text"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_below="@+id/img_login_logo"
            android:layout_marginTop="10dp"
            android:src="@drawable/txt_sign1"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_login_text"
            android:layout_marginTop="7dp"
            android:text="작가들의 다양한 경험을 글로 만나보세요."/>

        <TextView
            android:id="@+id/tv_login_kakao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_custom_login"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:textSize="12sp"
            android:text="카카오계정으로 직접 입력"/>

        <Button
            android:id="@+id/btn_custom_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/tv_user_find"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/kakao_login" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/btn_custom_login"
            android:layout_marginBottom="-35dp"
            android:textSize="13sp"
            android:text="카카오톡으로 로그인"/>

        <TextView
            android:id="@+id/tv_user_find"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bar_login"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:text="혹시, 계정을 잊어버리셨나요?"/>

        <View
            android:id="@+id/bar_login"
            android:layout_width="150dp"
            android:layout_height="0.3dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@color/colorBorderDark"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/img_sign1"
        android:layout_marginBottom="-100dp"
        android:layout_marginLeft="120dp"
        android:src="@drawable/img_sign1_book"/>

    <ImageView
        android:id="@+id/img_sign1"
        android:layout_width="210dp"
        android:layout_height="190dp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:src="@drawable/img_sign1"/>

</RelativeLayout>