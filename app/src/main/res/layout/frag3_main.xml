<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_cover_back_main"
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_cover" />

    <ImageView
        android:id="@+id/img_back_main"
        android:layout_width="match_parent"
        android:layout_height="362dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#576E655A" />

    <TextView
        android:id="@+id/tv_editor_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="25dp"
        android:text="editor's picks"
        android:textColor="#C8B7A2"
        android:fontFamily="@font/droidserif_regular"
        android:textSize="16sp"
        android:textStyle="italic|bold"/>

    <TextView
        android:id="@+id/tv_brunch_picks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_editor_pick"
        android:layout_alignLeft="@+id/tv_editor_pick"
        android:textColor="#C8B7A2"
        android:textSize="11.5sp"
        android:text="브런치가 추천하는 글" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_brunch_picks"
        android:layout_alignLeft="@+id/tv_editor_pick"
        android:fontFamily="@font/notosans_light"
        android:text="노 밀가루 해물파전"
        android:textColor="#80000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="-10dp"
        android:layout_alignLeft="@+id/tv_editor_pick"
        android:text="일상은 약속의 연속이며 때로는 약속에 울고 약속에 웃는다. 하지만 모든 약속을 지키"
        android:textColor="#80000000"
        android:textSize="12.5sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/tv_editor_pick"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/tv_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="by"
            android:textColor="#33000000"
            android:textSize="15sp"
            android:fontFamily="@font/droidserif_regular"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_nickname_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_by"
            android:text="nickName"
            android:textColor="#33000000"
            android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>