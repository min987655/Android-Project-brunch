<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--setPost-->
    <data>
        <variable
            name="postRespDto"
            type="com.cos.brunch.dto.PostRespDto" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_cover_back_main1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_cover" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#575A626E" />

            <TextView
                android:id="@+id/tv_title4"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_editor_pick"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="35dp"
                android:fontFamily="@font/notosans_light"
                android:lineSpacingExtra="-5dp"
                android:text="@{postRespDto.title}"
                android:ellipsize="end"
                android:textColor="@color/colorWhite"
                android:textSize="22sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/tv_title4"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tv_by1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droidserif_regular"
                    android:text="by"
                    android:textColor="@color/colorWhite40"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tv_nickname_main4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_by1"
                    android:text="@{postRespDto.nickName}"
                    android:textColor="@color/colorWhite40"
                    android:textSize="15sp" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_cover_back_main2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_cover" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#575A626E" />

            <TextView
                android:id="@+id/tv_title5"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_editor_pick"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="35dp"
                android:fontFamily="@font/notosans_light"
                android:lineSpacingExtra="-5dp"
                android:text="@{postRespDto.title}"
                android:ellipsize="end"
                android:textColor="@color/colorWhite"
                android:textSize="22sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/toolbar_marginLeft"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tv_by2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droidserif_regular"
                    android:text="by"
                    android:textColor="@color/colorWhite40"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tv_nickname_main5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_by2"
                    android:text="@{postRespDto.nickName}"
                    android:textColor="@color/colorWhite40"
                    android:textSize="15sp" />

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

</layout>