<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentInsetStart="0dp"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/toolbar_marginLeft"
    android:layout_marginTop="@dimen/toolbar_marginTop"
    android:layout_marginRight="@dimen/toolbar_marginRight"
    android:layout_height="40dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_toolbar_l"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/img_cancel"
            android:contentDescription="@string/StringValue"/>

        <TextView
            android:id="@+id/tv_toolbar_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:fontFamily="@font/notosans_light"
            android:text=""
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_toolbar_r"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            app:srcCompat="@drawable/img_check"
            android:contentDescription="@string/StringValue"/>

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>