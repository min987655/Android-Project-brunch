<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_cover_back_main"
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img_cover" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:layout_alignParentBottom="true"
        android:background="#575A626E" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="25dp"
        android:layout_alignLeft="@+id/tv_editor_pick"
        android:lineSpacingExtra="-5dp"
        android:fontFamily="@font/notosans_light"
        android:text="한국에서 멀어졌더니 생긴 변화"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@+id/tv_title">

        <TextView
            android:id="@+id/tv_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="by"
            android:textColor="#66FFFFFF"
            android:textSize="15sp"
            android:fontFamily="@font/droidserif_regular"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_nickname_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_by"
            android:text="nickName"
            android:textColor="#66FFFFFF"
            android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>