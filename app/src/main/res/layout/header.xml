<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--setPost-->
    <data>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_profile_header"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/img_header" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:text="닉네임"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_write"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_rounded_stroke_accent"
            android:gravity="center"
            android:text="글쓰기"
            android:textColor="@color/colorAccent"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_cabinet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="작가의 서랍"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_br"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:src="@drawable/img_br" />

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="브런치 홈"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="브런치 나우"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_library"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="글 읽는 서재"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="피드"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:background="@drawable/button_rounded_stroke_gray"
            android:gravity="center"
            android:text="로그아웃"
            android:textColor="@color/colorGray"
            android:textSize="13sp" />

        <!--    <ImageView-->
        <!--        android:id="@+id/iv_settings"-->
        <!--        android:layout_width="15dp"-->
        <!--        android:layout_height="0dp"-->
        <!--        android:layout_weight="1"-->
        <!--        android:paddingTop="330dp"-->
        <!--        android:src="@drawable/img_settings" />-->

    </LinearLayout>
</layout>