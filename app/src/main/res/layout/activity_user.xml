<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <include layout="@layout/toolbar_user_profile_update" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_profile"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_above="@+id/tv_nickname"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/img_logo_b" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_nickname_intro"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="그삼"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/tv_nickname_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/user_follower_following"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="닉네임 설명 나옴"
            android:textColor="#4F000000"
            android:textSize="13sp" />

        <RelativeLayout
            android:id="@+id/user_follower_following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_follower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="구독자"
                android:textColor="#4F000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_follower_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:layout_toRightOf="@+id/tv_follower"
                android:text="0"
                android:textColor="#63000000"
                android:textSize="16sp" />

            <View
                android:id="@+id/img_br"
                android:layout_width="0.7dp"
                android:layout_height="11dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:layout_toRightOf="@+id/tv_follower_count"
                android:background="#C5C5C5" />

            <TextView
                android:id="@+id/tv_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/img_br"
                android:text="관심작가"
                android:textColor="#4F000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_following_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/tv_following"
                android:text="0"
                android:textColor="#63000000"
                android:textSize="16sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_write"
            android:layout_width="95dp"
            android:layout_height="38dp"
            android:layout_below="@+id/user_follower_following"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rounded_solid"
            android:gravity="center"
            android:text="글쓰기"
            android:textColor="#00c3bd"
            android:textSize="15sp" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav"
        android:layout_width="210dp"
        android:layout_height="match_parent"
        android:layout_gravity="start|left"
        app:labelVisibilityMode="unlabeled"
        app:headerLayout="@layout/header" />

</androidx.drawerlayout.widget.DrawerLayout>